<section style="width:80vw; margin-left:10vw">
  <h2
    class="w-full text-center uppercase "
    style="font-weight:700; letter-spacing:4px; color: rgb(50,87,160); font-size:19px; margin:25px 0px 32px"
  >
    Estado de Cuenta
  </h2>

  <section class="flex flex-row justify-around" style="justify-content:space-around">
    <div id="border-box">
      <span class="flex flex-row justify-between" style="font-size:15px">
        <p class="opacity-70">Presupuesto Anual</p>
        <p style="color:rgb(122,182,116)">Presupuesto Actual</p>
      </span>
      <span class="flex flex-row justify-between font-bold" style="font-size:20px">
        <p>{raw(@money.anual_budget)}</p>
        <p>{raw(@money.actual_budget)}</p>
      </span>
      <hr />

      <div style="margin-bottom: -75px">
        <span>
          <svg viewBox="-200 -170 400 180">
            <path
              d="M -150 0 A 150 150 0 0 1 150 0"
              stroke="#e5eafc"
              stroke-width="20"
              fill="none"
            />
            {raw(@svg_progress)}
            {raw(@circle_progress)}
          </svg>
        </span>
        <span class="text-center" style="bottom:94px; position:relative">
          <p style="font-size:5vw; font-weight:700; line-height:64px">
            {raw(@money.percentage)}%
          </p>
          <p>
            Pendiente: <strong>{raw(@money.debt)}</strong>
          </p>
        </span>
      </div>
    </div>


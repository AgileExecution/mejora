  <br />
  <br />
  <br />

  <section style="margin:auto; width:45vw">
    <h3 class="payment-title">
      Comprobantes de Pago
    </h3>
    <div id="border-box-v2" class="payment-period" style="width:100%">
      <table class="w-full" style="text-indent:20px">
        <tr style="color: rgba(50,87,160,1); font-weight: 600;">
          <td>Desde</td>
          <td>Hasta</td>
        </tr>
        <tr>
          <td>01/Ene/2024</td>
          <td>22/Nov/2024</td>
        </tr>
      </table>
    </div>

    <br />
    <br />

    <div
      id="border-box-v2"
      style="height: 700px;    overflow: auto;    padding: 25px 30px 0px; scrollbar-width: thin;"
    >
      <%= for date <- @payment_dates do %>
        <article id="payment-history-cell" class="font-semibold">
          <span class="flex flex-row justify-between w-full">
            <p>{date}</p>
            <p class="green-color">$750.00</p>
          </span>

          <p style="opacity:0.5">Pago de Residentes</p>
          <p class="blue-color">Transferencia Bancaria</p>
        </article>
      <% end %>
    </div>
  </section>
</section>
